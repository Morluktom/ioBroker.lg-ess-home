{
    "i18n": true,
    "type": "tabs",
    "tabsStyle": {
        "width": "calc(100% - 100px)"
    },
    "items": {
        "_mainTab": {
            "type": "panel",
            "label": "Main settings",
            "items": {
                "ipadress": {
                    "type": "text",
                    "xs": 12,
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "xl": 4,
                    "label": "IP Adress",
                    "help": "IP Adress of LG ESS Inverter"
                },
                "userpassword": {
                    "newLine": true,
                    "type": "password",
                    "xs": 12,
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "xl": 4,
                    "label": "Password",
                    "help": "Password of the Inverter"
                },
                "_divider1": {
                    "type": "divider"
                },            
                "refreshTime": {
                    "newLine": true,
                    "type": "number",
                    "min": 1,
                    "max": 60,
                    "xs": 12,
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "xl": 4,
                    "label": "Update Intervall Home [s]"
                },
                "refreshTimeCommon": {
                    "newLine": true,
                    "type": "number",
                    "min": 1,
                    "max": 600,
                    "xs": 12,
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "xl": 4,
                    "label": "Update Intervall Common [s]"
                }
            }
        },
        "_installerTab": {
            "type": "panel",
            "label": "Installer settings",
            "items": {
                "loginInstaller": {
                    "type": "checkbox",
                    "xs": 12,
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "xl": 4,
                    "label": "Enable Installer Login"
                },
                "installerPassword": {
                    "newLine": true,
                    "hidden": "data.loginInstaller == false",
                    "type": "password",
                    "xs": 12,
                    "sm": 12,
                    "md": 4,
                    "lg": 4,
                    "xl": 4,
                    "label": "Installer Password"
                }
 
            }           
        }
    }
}